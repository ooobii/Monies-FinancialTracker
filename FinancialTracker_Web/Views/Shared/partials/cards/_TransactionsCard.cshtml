@using System.Web.Util
@using FinancialTracker_Web.Models
@using Microsoft.AspNet.Identity

@model BankAccount




<div class="card">
    <div class="card-header bg-gradient-h-purple" id="transactioncard">
        Transactions
        <div class="card-tools">
            @Html.Partial("~/Views/Transactions/_TransactionCreateButton.cshtml", Model)
        </div>
    </div>
    <div class="card-body">
        @if( Model.Transactions.Count > 0 ) {
            
            <div class="row row-cols-1">
                <div class="col">
                    @Html.Partial("~/Views/Shared/partials/cards/_ExpenseCard.cshtml", Model)
                </div>
                <div class="col">
                    @Html.Partial("~/Views/Shared/partials/cards/_IncomeCard.cshtml", Model)
                </div>
            </div>

        } else {
            <h5 class="text-center mt-3 mb-3">No transactions recorded yet!</h5>
        }
    </div>
</div>